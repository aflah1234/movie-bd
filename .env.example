# Server Configuration
PORT=8000
NODE_ENV=production

# Frontend URL (add your actual frontend URL)


# Database
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/cinebook

# JWT Secret
JWT_SECRET=your_super_secret_jwt_key_here

# Razorpay Configuration
RAZORPAY_KEY_ID=rzp_test_your_key_id
RAZORPAY_KEY_SECRET=rzp_test_your_key_secret
RAZORPAY_MODE=test

# Email Configuration (Gmail)
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_specific_password

# Cloudinary Configuration
CLOUDINARY_NAME=your_cloudinary_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Development Settings (set to false in production)
SKIP_OTP_IN_DEV=false
SKIP_PAYMENT_IN_DEV=false
SKIP_EMAIL_ON_DEV=false